<h1>Listing businesses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Addressline1</th>
    <th>Addressline2</th>
    <th>Suburb</th>
    <th>State</th>
    <th>Postcode</th>
    <th>Review</th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%=h business.Name %></td>
    <td><%=h business.AddressLine1 %></td>
    <td><%=h business.AddressLine2 %></td>
    <td><%=h business.Suburb %></td>
    <td><%=h business.State %></td>
    <td><%=h business.Postcode %></td>
    <td><%=h business.Review %></td>
    <td><%= link_to 'Show', business %></td>
    <td><%= link_to 'Edit', edit_business_path(business) %></td>
    <td><%= link_to 'Destroy', business, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

